{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES6",
    "jsx": "react-jsx",

    /* Modules */
    "module": "CommonJS",

    /* JavaScript Support */
    "allowJs": false,
    "moduleResolution": "node",

    /* Emit */
    "declaration": false,
    "declarationMap": false,
    "emitDeclarationOnly": false,
    "sourceMap": false,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true
  }
}
